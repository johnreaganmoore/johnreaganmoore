@import url(http://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Source+Sans+Pro|Fenix|Fauna+One|Carrois+Gothic|Carme|Ledger|Linden+Hill|Cardo);
@import url(http://fonts.googleapis.com/css?family=Varela+Round);

.group:after {
  content: "";
  display: table;
  clear: both;
}

$golden-factor: 12px;
$gf: $golden-factor;

$gut-max-width: 1200px;

$mobile-view: 500px;

div {
/*	border: 1px solid blue;*/
	padding: 0px;
	margin: 0px;
}

p {
	margin: 0px;
}

* {
	margin: 0;
	background-color: #FAFAFA;
	box-sizing: border-box;
}

body {
	color: #374249;
	font-family: 'Varela Round', sans-serif;
	font-size: 24px;
}

.gut {
	margin-left: 15%;
	margin-right: 15%;
}

header {
	padding-top: 40px;
	padding-bottom: 40px;
/*	background: green;*/
	position: fixed;
	width: 100%;
	margin-bottom: 20px;
	z-index: 100;

}

.header--content {
	@extend .gut;
	@media screen and (max-width: $mobile-view){
		text-align: center;
	}
}

.social--icons {
	float: right;
	img {
		max-width: 25px;
		margin-left: 10px;
	}
	@media screen and (max-width: $mobile-view){
		float: none;
		img {
			max-width: 25px;
		}
	}
}

.name--logo {
	float: left;
	@media screen and (max-width: $mobile-view){
		float: none;
	}
}

.org--logo {
	display: inline-block;
	max-height: 100px;
	img {
		border-radius: 50%;
		max-width: 70px;
		max-height: 70px;
	}
}

.org--name--container {
	display: inline-flex;
	width: 60%;
	margin: auto 0px;
	margin-left: 10%;
}

.org--name {
	display: inline-block;
	margin: auto 0px;
}

.close--details {
	display: inline-block;
	margin: auto 10px;
	font-size: 50px;
	color: rgba(55, 66, 73, 0.4);
}

.date {
	font-size: .8em;
	display: inline-block;
	width: 20%;
	margin: auto 0px;
	margin-left: 150px;
	margin-right: 0px;
	color: rgba(55, 66, 73, 0.4);

}

.main--content {
	@extend .gut;
	position: relative;
	top: 220px;

	@media screen and (max-width: $mobile-view){
		top: 250px;
	}
}

.resume--item {
	margin-bottom: 80px;
}

.resume--item--headline {
	display: inline-flex;
	width: 100%;
	margin-bottom: 0px;
}

.resume--item--details {
	padding: 50px;
	padding-left: 100px;
	font-size: 16px;
	margin-top: 0px;
}


.item-container {
  position: relative;
  text-align: center;
  font-size: 0;
}

.items-line {
  position: absolute;
  top: 36px;
  bottom: 36px;
  margin-left: 36px;
  width: 2px;
  background-color: black;
}

.items {
  position: relative;
  display: inline-block;
  list-style-type: inherit;
  padding-left: 0;
  text-align: left;
}

.item {
  margin-bottom: 48px;
  font-size: 0;
  font-family: sans-serif;
}
.item:last-child {
  margin-bottom: 0;
  background-image: "/assets/illuminate.jpeg";
}

.item > * {
  display: inline-block;
  vertical-align: middle;
}
    
.item__icon {
  width: 72px;
  height: 72px;
  border-radius: 100%;
  border: 1px solid black;
  background-color: #eee;
}

.item__description,
.item__date {
  font-size: 18px;
}

.item__description {
  color: black;
  width: 250px;
  margin-left: 24px;
}

.item__date {
  color: #999;
}


