@import url(http://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Source+Sans+Pro|Fenix|Fauna+One|Carrois+Gothic|Carme|Ledger|Linden+Hill|Cardo);

.group:after {
  content: "";
  display: table;
  clear: both;
}

$golden-factor: 12px;
$gf: $golden-factor;

$gut-max-width: 1200px;

$mobile-view: 500px;



* {
	margin: 0;
	background-color: #FAFAFA;
	box-sizing: border-box;
}

body {
	color: #636363;
	font-family: 'Fenix', serif;
	font-size: 32px;
}

.gut {

}

header {
	padding: 40px;
	background: green;
	position: fixed;
	width: 100%;
	margin-bottom: 20px;
	z-index: 100;

}

.header--content {
	@extend .gut;
	@media screen and (max-width: $mobile-view){
		text-align: center;
	}
}

.social--icons {
	float: right;
	img {
		max-width: 25px;
	}
	@media screen and (max-width: $mobile-view){
		float: none;
		img {
			max-width: 25px;
		}
	}
}

.name--logo {
	float: left;
	@media screen and (max-width: $mobile-view){
		float: none;
	}
}

.org--logo {
	img {
		border-radius: 50%;
		max-width: 100px;
	}
}

.main--content {
	position: relative;
	top: 130px;
}




