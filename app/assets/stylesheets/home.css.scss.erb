@import url(http://fonts.googleapis.com/css?family=Alegreya+Sans+SC|Source+Sans+Pro|Fenix|Fauna+One|Carrois+Gothic|Carme|Ledger|Linden+Hill|Cardo);
@import url(http://fonts.googleapis.com/css?family=Varela+Round);

.group:after {
  content: "";
  display: table;
  clear: both;
}

$golden-factor: 12px;
$gf: $golden-factor;

$gut-max-width: 1200px;

$mobile-view: 500px;

div {
/*	border: 1px solid blue;*/
	padding: 0px;
	margin: 0px;
}

p {
	margin: 0px;
}

* {
	margin: 0;
	background-color: #FAFAFA;
	box-sizing: border-box;
}

body {
	color: #374249;
	font-family: 'Varela Round', sans-serif;
	font-size: 24px;
}

.gut {
	margin-left: 15%;
	margin-right: 15%;
}

a {
	background-color: rgba(0, 0, 0, 0.0);
	margin: 0px;
	padding: 0px;
	text-decoration: none;
	color: #374249;
}

header {
	padding-top: 50px;
	padding-bottom: 50px;
	position: fixed;
	width: 100%;
	margin-bottom: 20px;
	z-index: 100;
}

footer {
	height: 100px;
	background-color: #374249;
	margin-top: 100px;
	position: absolute;
	bottom: 0px;
}

.header--content {
	@extend .gut;
	@media screen and (max-width: $mobile-view){
		text-align: center;
	}
}

.social--icons {
	float: right;
	background-color: rgba(0, 0, 0, 0.0);
	border-radius: 50%;
	display: inline-flex;
	img {
		max-width: 25px;
		margin-left: 10px;
		background-color: rgba(0, 0, 0, 0.0);
		border-radius: 50%;
		opacity: .9;
	}
	img:hover {
		opacity: .6;
	}
	a {
		background-color: rgba(0, 0, 0, 0.0);
		margin: 0px;
		padding: 0px;
		line-height: 0px;
	}
	@media screen and (max-width: $mobile-view){
		float: none;
		img {
			max-width: 25px;
		}
	}
}

.name--logo {
	float: left;
	background-color: rgba(0, 0, 0, 0.0);
	opacity: .9;
	@media screen and (max-width: $mobile-view){
		float: none;
	}
}
.name--logo:hover {
	opacity: .6;
}

.org--logo {
	display: inline-block;
	max-height: 70px;
	z-index: 2;
	img {
		border-radius: 50%;
		max-width: 70px;
		max-height: 70px;
		margin: 0px;
		border: 1px solid #374249;
	}
}

.org--name--container {
	display: inline-flex;
	width: 60%;
	margin: auto 0px;
	margin-left: 10%;
}

.org--name {
	display: inline-block;
	margin: auto 0px;
}

.org--name:hover {
	opacity: 0.8;
}

.close--details {
	display: none;
	margin: auto 10px;
	font-size: 50px;
	color: rgba(55, 66, 73, 0.4);
}

.date {
	font-size: .8em;
	display: inline-block;
	width: 20%;
	margin: auto 0px;
	margin-left: 150px;
	margin-right: 0px;
	color: rgba(55, 66, 73, 0.4);

}

.main--content {
	@extend .gut;
	position: relative;
	top: 220px;

	@media screen and (max-width: $mobile-view){
		top: 250px;
	}
}

.resume--item {
	margin-bottom: 200px;
}

#gordon {
	margin-bottom: 300px;
}

.resume--item--headline {
	display: inline-flex;
	width: 100%;
	margin-bottom: 0px;
}

.resume--item--details {
	padding: 50px;
	padding-left: 100px;
	font-size: 16px;
	margin-top: 0px;
	display: none;
}

.items--line {
  position: absolute;
  top: 35px;
  bottom: 35px;
  margin-left: 35px;
  width: 1px;
  background-color: #374249;
  z-index: 1;
}

.last--active {
  margin-bottom: 200px;
}




